#!/bin/bash
#basket = ~/RECYCLE

RENAME  = $(date  +%y%m%d)

if [ -e ~/RECYCLE ] 
then 
	mv "$1" ~/RECYCLE
else
	mkdir ~/RECYCLE 
	mv "$1" ~/RECYCLE
fi
#echo 'Файл '$1' перемещен успешно'

if [ -e ~/RECYCLE/"$1" ]
then
	cd ~/RECYCLE
	newName = mv "$1" "$1 $RENAME"
	gzip "$newName"
	echo "файл удалён"
else 
	"Файл не был удален" 
fi 

if [ -e ~/RECYCLE ] 
then 
	cd ~/RECYCLE
	find . -name "*.gz"
fi
